<! DOCTYPE html >
<html>
  <head>
    <title> BPD Officer Records</title>
  </head>
  <body>
  <nav class="navbar navbar-expand-sm bg-light justify-content-left">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/officers">Officers</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/arrests">Arrests</a>
    </li>
  </ul>
</nav>
<br>
    <div class="container">
    <div class = "text-white bg-primary">
      <h3>Baltimore Police Department Records</h3>
    </div>
    </div>
    <center><h5>Arrest Information</h5></center>
<table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Arrest Category</th>
      <th>Firearm Recovered?</th>
    </tr>
        <tr>
        <td> <%= @arrest.name %></td>
        <td> <%= @arrest.age %></td>
        <td> <%= @arrest.charge_description %></td>
        <td> <%= @arrest.firearm %></td>
    </tr>
</table>
<br>
<p><b>Record created: </b><%= @arrest.created_at %></p>
<p><b>Record updated: </b><%= @arrest.updated_at %></p>

<p><%= button_to "Edit #{@arrest.name}", "/arrests/#{@arrest.id}/edit", method: :get %></p>
<br>
<p><%= button_to "Delete #{@arrest.name}", "/arrests/#{@arrest.id}", method: :delete %></p>

</html>
