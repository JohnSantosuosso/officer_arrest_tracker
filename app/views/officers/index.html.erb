<! DOCTYPE html >
<html>
  <head>
    <title> BPD Officer Records</title>
  </head>
  <header>
  <nav class="navbar navbar-expand-sm bg-light justify-content-left">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/officers">Officers</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/arrests">Arrests</a>
    </li>
  </ul>
</nav>
  </header>
  <body>
<br>
    <div class="container">
    <div class = "text-white bg-primary">
      <h3>Baltimore Police Department Records</h3>
    </div>
    </div>
<table class="table table-bordered">
    <tr>
      <th>Officer Name</th>
      <th>Created at</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

      <% @officers.each do |officer| %>
    <tr>
        <td><%= link_to officer.name, "/officers/#{officer.id}" %> </td>
        <td> <%= officer.created_at %></td>
        <td> <%= link_to "Update #{officer.name}", "/officers/#{officer.id}/edit" %> </td>
        <td> <%= form_with url: "/officers/#{officer.id}", method: 'delete', local: true do |form| %>
            <%= form.submit "Delete Officer #{officer.name}" %>
            <% end %> </td>
      <% end %>
    </tr>
</table>
<%= link_to "New Officer", "/officers/new" %>
</html>