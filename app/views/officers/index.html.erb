<! DOCTYPE html >
<html>
  <head>
    <title> BPD Officer Records</title>
  </head>
  <header>
  <nav class="navbar navbar-expand-sm bg-light justify-content-left">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/officers">Officers</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/arrests">Arrests</a>
    </li>
  </ul>
</nav>
  </header>
  <body>
<br>
    <div class="container">
    <div class = "text-white bg-primary">
      <h3>Baltimore Police Department Records</h3>
    </div>
    </div>
<div id='officer_table'>    
<table class="table table-bordered">
    <tr>
      <th>Officer Name</th>
      <th>Created at</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

      <% @officers.each do |officer| %>
    <tr>
      <td class = "officer_name_link"><%= link_to officer.name, "/officers/#{officer.id}" %> </td>
      <td> <%= officer.created_at %></td>
      <td> <%= button_to "Update #{officer.name}", "/officers/#{officer.id}/edit", method: :get %> </td>
      <td> <%= button_to "Delete #{officer.name}", "/officers/#{officer.id}", method: :delete %></td>
      <% end %>
    </tr>
</table>
</div>
<br>
<div id = "sort_by_arrests">
<p class = "sort link" ><%= link_to "Sort Officers By Arrests(High to Low)", 
"/officers?sort=arrest_count"%></p>
</div>
<br>
<%= button_to  "New Officer", "/officers/new", method: :get %>
</html>