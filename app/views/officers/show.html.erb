<! DOCTYPE html >
<html>
  <head>
    <title> BPD Officer Records</title>
  </head>
  <body>
  <nav class="navbar navbar-expand-sm bg-light justify-content-left">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/officers">Officers</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/arrests">Arrests</a>
    </li>
  </ul>
</nav>
<br>
    <div class="container">
    <div class = "text-white bg-primary">
      <h3>Baltimore Police Department Records</h3>
    </div>
    </div>
<table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Badge Number</th>
      <th>Under Investigation</th>
      <th>Total Arrests</th>
      <th>All Arrests</th>
    </tr>
    <tr>
        <td><%= @officer.name %> </td>
        <td><%= @officer.badge_number %></td>
        <td><%= @officer.under_investigation == true ? "Yes": "No" %></td>
        <td><%= @officer.count_arrests %></td>
        <td><%= button_to "#{@officer.name} Arrests", "/officers/#{@officer.id}/arrests", method: :get %></td>
    </tr>
</table>
<br>
<p><b>Record created: </b><%= @officer.created_at %></p>
<p><b>Record updated: </b><%= @officer.updated_at %></p>
<br>
<br>
<p><%= button_to "Update Officer", "/officers/#{@officer.id}/edit", method: :get %></p>
<br>
<p><%= button_to "Delete Officer", "/officers/#{@officer.id}", method: :delete %></p>

</html>